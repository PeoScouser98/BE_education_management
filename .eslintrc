{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint", "prettier"],
	"extends": [
		// "eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"rules": {
		"no-useless-catch": "warn",
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 3,
				"singleQuote": true,
				"printWidth": 120,
				"trailingComma": "none",
				"semi": "off"
			}
		]
	}
}
